        $(".cards").click(function() {
            $(this).css({
                "cursor": "pointer"
            })
            var id = this.id;
            var word = $(this).children().text();
            $("#modal-word").text(word);
            $("input[name='card-id']").val(id);
            console.log($("input[name='card-id']").val());
        });

        $("#modal-correct").click(function() {
            var cardId = $("input[name='card-id']").val();
            console.log(cardId);
            $("#" + cardId).parent().parent().css({
                "border": "none",
                "border": "solid",
                "border-color": "rgb(181, 103, 226)"
            });
            $("#response" + cardId).val(true);
            console.log($("#response" + cardId).val())
            $("#modal-right").trigger("click");
        })

        $("#modal-incorrect").click(function() {
            var cardId = $("input[name='card-id']").val();
            console.log(cardId);
            $("#" + cardId).parent().parent().css({
                "border": "none",
                "border": "solid",
                "border-color": "rgb(236, 108, 108)"
            });
            $("#response" + cardId).val(false);
            console.log($("#response" + cardId).val());

            $("#modal-right").trigger("click");
        })

        $("#modal-left").click(function() {

            $(".modal-togreen").parent().parent().parent().parent().parent().parent().css({
                "border": "none",
            })
            console.log("Hey left")
            var currentWord = $("input[name='card-id']").val();
            previousWord = parseInt(currentWord) - 1;
            $("input[name='card-id']").val(previousWord);
            console.log(previousWord)
            var word = $("#" + previousWord).children().text();
            console.log(word)

            $("#modal-word").text(word);

        });


        $("#modal-right").click(function() {
            $(".modal-tored").parent().parent().parent().parent().parent().parent().css({
                "border": "none",
            });

            console.log("Hey right")
            var currentWord = $("input[name='card-id']").val();
            previousWord = parseInt(currentWord) + 1;
            $("input[name='card-id']").val(previousWord);
            console.log(previousWord)
            var word = $("#" + previousWord).children().text();
            console.log(word)
            $("#modal-word").text(word);

        })


        $(".togreen").click(function() {
