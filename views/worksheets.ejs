                            <a href="/logout">
                                <button type="submit" class="btn text-pastel-purple px-4 rounded rounded-pill" style=" background-color: #51548C; color:white;">
                                    Log Out
                                </button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- navbar ends here -->

    <div class="bigWrapper container-fluid">
        <div class="row">
            <!-- side nav bar starts here -->
            <div class="col-2 align-self-left bg-white shadow-sm mt-0 fullHeight py-3">
                <!-- <div class="d-flex justify-content-center"> <img src="/img/logo.png" alt="" height="75px" width="75px" class="align-self-center"></div> -->

                <h5 class=" text-pastel-purple pt-2 px-3">Navigations</h5>
                <ul class="nav flex-column pt-1 px-1">

                    <hr>
                    <li class="nav-item">
                        <a class="nav-link active text-dark" href="#"><i class="bi bi-person-fill  text-secondary"></i>
                        Students</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-dark" href="/worksheet"><i
                            class="bi bi-file-earmark-word-fill text-secondary"></i> Worksheets</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-dark" href="/datatracking"><i class="bi bi-graph-up text-secondary"></i> Data
                        tracking</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-dark" href="/iep"><i class="bi bi-card-list text-secondary"></i> Iep
                        Info</a>
                    </li>
                </ul>
                <h5 class=" text-pastel-purple pt-4 px-3">Account</h5>
                <ul class="nav flex-column pt-1 px-1">
                    <hr>
                    <li class="nav-item">
                        <a class="nav-link active text-dark" href="/profile"><i class="bi bi-person-circle text-secondary"></i>
                        Profile</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-dark" href="/logout"><i class="bi bi-box-arrow-in-left text-secondary"></i>
                        Sign out</a>
                    </li>
                </ul>
            </div>
            <!-- side bar ends here -->
            <div class="col-10 mt-2">
                <div class="col-12 pastel-purple text-shadow-sm text-center text-white p-1 mx-0 rounded">
                    <div class="container-fluid py-2">
                        <div class="row d-flex align-items-center">
                            <div class="col-5">
                                <!-- the nav for selecting Worksheets -->
                                <div class="dropdown pastel-purple">
                                    <a class="btn border border-white pastel-purple text-white dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Select a Worksheet
                  </a>


                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" href="/worksheet/?type=1">Alphabets</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=2">Dolch Pre primary</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=3">Dolch primary</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=4">Dolch Grade 1</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=5">Dolch Grade 2</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=6">Dolch Grade 3</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=7">Dolch Noun </a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=8">Fry 1</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=9">Fry 2</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=10">Fry 3</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=11">Fry 4</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=12">Fry 5</a></li>
                                        <li><a class="dropdown-item" href="/worksheet/?type=13">Fry 6</a></li>
                                    </ul>
                                </div>
                                <!-- end of drop down -->
                            </div>
                            <div class="col-5">

                                <select id="student" onchange=url(this.value); class="form-select pastel-purple border-white " aria-label="Default select example">
                  <option selected>Select a student</option>
                  <% if(student.length> 0) { %>
                    <% student.forEach(student=>{ %>
                      <option value="<%= student.sid%>">
                        <%= student.full_name %>
                      </option>
                      <% }); %>
                        <% } %>
                </select>


                            </div>
                        </div>
                    </div>

                </div>



                <!-- this is the row thats holding the word cards -->
                <form id="response" action="" class="hide-submit" method="POST">
                    <div class="row">
                        <!-- working of t
            he card -->
                        <% if(result.length> 0) { %>
                            <% result.forEach(result=>{ %>
                                <!-- This is the card -->
                                <div class="col-2 m-3 ">
                                    <div class=" borderColorChange card bg-white shadow-sm rounded WorksheetTxt align-items-center ">
                                        <div class="words mt-5">
                                            <!-- the word thats actually going to change here  -->
                                            <h1 class="text-secondary">
                                                <%= result.word%>
                                            </h1>
                                            <input type="hidden" name="wordid" value=" <%= result.id%>">
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-6 ">
                                                <label>
                            <!-- <input id="response" type="button" name="correct" value=""/> -->
                          <button type="button" onclick="studentResponse('correct','response <%= result.id%>')">
                          <i class="correct togreen btn bi bi-emoji-laughing-fill fa-2x" style="color:rgb(181, 103, 226);">
                            <!-- <input type="hidden" name="correct"  value=""/> -->
                            </i></button></label>
                                            </div>
                                            <input id="response <%= result.id%>" type="hidden" name="response" value="" />
                                            <div class="col-6">
                                                <label>
                          <!-- <input type = "button" onclick="test()"> -->
                          <!-- <input type="submit" name="incorrect"/> -->
                        <button type="button" onclick="studentResponse('incorrect','response <%= result.id%>')">
                        <i class="incorrect tored btn bi bi-emoji-neutral-fill fa-2x" style="color:rgb(236, 108, 108);"></i></button></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end of the card  -->
                                <% }); %>
                                    <% } %>



                    </div>


                    <% if(result.length> 0) { %>
                        <input type="submit" id="fixedbutton" style=" background-color: #51548C" class="btn btn-success btn-lg px-5" value="Submit">
                        <% } %>
                </form>

            </div>

        </div>
    </div>


    <!-- put this at the end before body ends -->
    <script>
        function studentResponse(type, id) {
            if (type === 'correct') {
                document.getElementById(id).value = true;
                console.log(type, id)
            } else {
                document.getElementById(id).value = false;
            }
        }
