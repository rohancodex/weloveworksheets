                        <!-- working of the card -->
                        <% if(result.length> 0) { %>
                            <% result.forEach(result=>{ %>
                                <!-- This is the card -->
                                <div class="col-2 m-3 ">
                                    <div class="borderColorChange card bg-white shadow-sm rounded WorksheetTxt align-items-center ">
                                        <div class="words mt-5">
                                            <!-- the word thats actually going to change here  -->
                                            <div id="<%= result.id%>" class="cards" data-bs-toggle="modal" data-bs-target="#exampleModal" style="cursor: pointer;">
                                                <h1 class="text-secondary" data-bs-toggle="tooltip" title="Click to popup">
                                                    <%= result.word%>
                                                </h1>
                                            </div>
                                            <input type="hidden" name="wordid" value="<%= result.id%>">
                                        </div>
                                        <div class="row mt-2">
