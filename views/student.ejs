    <script>
        function handleFileSelect(evt) {
            var file = evt.target.files[0];
            Papa.parse(file, {
                header: false,
                dynamicTyping: true,
                complete: function(results) {
                    data = results;
                    console.log(data);

                }
            });
        }

        $(document).ready(function() {
            $("#myfile").change(handleFileSelect);
        });
    </script>
