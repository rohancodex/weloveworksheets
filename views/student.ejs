                <!-- the progress bar div starts here -->
                <div class="row bg-white rounded shadow-sm mt-3">
                    <div class="jumbotron-fluid px-5 bg-dark text-white rounded d-flex justify-content-center align-items-center">
                        <p class="py-1 mt-1">Your students</p>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="container my-3">
                            <div class="row mx-4">
                                <div class="col-5">
                                    <h4>Students List:</h4>
                                </div>

                            </div>
                        </div>

                        <!-- the progress bar designs here -->
                        <div class="container ml-4 mb-1 ">
                            <div id="s_list" class="row border border-light bg-white shadow rounded m-1 mx-3 p-3 d-flex align-items-center">


                                <% if(data.length> 0) { %>


                                    <div class="container">
                                        <% let j = 1; %>
                                            <% data.forEach(data=>{ %>
                                                <div class="row my-1">
                                                    <div class="col-1">
                                                        <%= j %>
                                                            <% j++; %>
                                                    </div>
                                                    <div class="col-6">
                                                        <%= data.full_name %>

                                                    </div>
                                                    <div class="col-3">
                                                        <span class="">
                                                                <%= data.age %> yrs
                                                                
                                                            </span>
                                                    </div>
                                                    <div class="col-1">
                                                        <div class="form-group">
                                                            <a class="btn btn-success edit" href="../student/edit/<%=data.sid%>">Edit</a>


                                                        </div>
                                                    </div>
                                                    <div class="col-1">
                                                        <div class="form-group">
                                                            <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../student/delete/<%=data.sid%>">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>



                                                <div>
                                                </div>

                                                <% }); %>

                                                    <% } %>


                                    </div>
                            </div>
                        </div>


                    </div>

