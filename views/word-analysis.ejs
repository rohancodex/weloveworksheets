    <link rel="stylesheet" href="/css/weloveworksheets.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        /* colors */
        
        .pastel-purple {
            background-color: #51548C;
        }
        
        .pastel-red {
            background-color: #F25270;
        }
        
        .pastel-green {
            background-color: #49A68B;
        }
        
        .text-pastel-purple {
            color: #51548C;
        }
        
        .text-pastel-red {
            color: #F25270;
        }
        
        .text-pastel-green {
            color: #49A68B;
        }
        /* end of colors */
        
        .overflowTxtGen {
            height: 500px;
            width: auto;
            overflow-y: scroll;
        }
        
        .overflowTxtGen::-webkit-scrollbar {
            width: 8px;
        }
        
        .overflowTxtGen::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 2px rgba(0, 0, 0, 0);
            box-shadow: inset 0 0 2px rgba(0, 0, 0, 0);
        }
        
        .overflowTxtGen::-webkit-scrollbar-thumb {
            background-color: #51548C;
            border-radius: 10px;
        }
        
        .chartHolderHeight {
            height: 400px;
        }
    </style>
</head>


<body class="bg-light">
