<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/css/weloveworksheets.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script type='text/javascript' src=''></script>
</head>

<body oncontextmenu='return false' style="background-image: url(/img/blobsBg.png); background-repeat: no-repeat; background-size: cover;">

    <section class="fullHeight d-flex align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center mt-3">
                <div class="col-8 ">
                    <div class="container-fluid bg-white rounded shadow-lg  py-5 px-3 align-self-center">
                        <div class="row">
                            <!-- the image container -->
                            <div class="col-6 my-3 overflow-hidden d-flex align-items-end">
                                <img src="/img/arabica-31.png" alt="" height="320px" width="auto" class="pt-5">
                            </div>
                            <!-- the image container ends here -->
                            <!-- the form starts here -->
                            <div class="col-6 d-flex justify-content-center px-3">
                                <form action="/auth/register" method="POST">
                                    <h2 class="text-pastel-purple">Registration form</h2>
                                    <div class="row mt-2">
                                        <div class="col-10 mb-3"> <label>Name</label> <input type="text" name="name" id="first_name" class="form-control"> </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-10 mb-3"> <label>Your Email</label> <input type="email" class="form-control" name="email" required> </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-6 mb-3"> <label>Password</label> <input type="password" name="password" id="password" class="form-control"> </div>
                                        <div class="col-sm-6 mb-3"> <label>Re-enter Password</label> <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"> </div>
                                        <!-- <% if(message){ %> 
                                            <h6 class="alert alert-danger mt-4"><%= message %> </h6>
                                            <% } %>  -->
                                    </div>
                                    <!-- <div class="mb-3"> <label class="option">I agree to the <a href="#">Terms and Conditions</a> <input type="checkbox" checked> <span class="checkmark"></span> </label> </div> -->
                                    <div class="row mb-3">
                                        <div> <input type="submit" value="Register" class="login btn btn-lg text-white" name="login" style=" background-color: #51548C;"> </div>
                                    </div>
                                    <div class="row d-flex justify-content-center">
                                        <a href="/login" class="text-secondary">
                                            <p class="text-secondary mt-3">Already have an account? Sign in here/p>
                                        </a>
                                        <% if(message){ %>
                                            <h6 class="alert alert-danger mt-4">
                                                <%= message %>
                                            </h6>
                                            <% } %>
                                    </div>
                                </form>
                            </div>
                            <!-- the form ends here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script type='text/javascript'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>

</html>