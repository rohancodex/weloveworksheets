<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class="bg-light">
    <!-- <div class="row bg-white rounded shadow-sm mt-3"> -->

    <div class="jumbotron-fluid px-5 py-3 mb-5 bg-dark text-white d-flex justify-content-center align-items-center">
        <h4 class="py-1 mt-1">Admin Dashboard</h4>
    </div>

    <div class="container col-9 bg-white p-0">
        <div class="jumbotron-fluid p-1 rounded mb-4 bg-dark text-white d-flex justify-content-center">
            <h4 class=" mt-1">Teachers</h4>
        </div>
        <div class="container col-9">
            <div class="row mx-3">
                <div class="col-1">
                    <strong><p class="m-0">Sr.No.</p></strong>
                </div>
                <div class="col-3">
                    <strong><p class="m-0">Teacher Name</p></strong>
                </div>
                <div class="col-4">
                    <strong><p class="m-0">Teacher E-mail</p></strong>
                </div>
                <div class="col-4 ">
                    <strong><p class="mb-0 " style="margin-left: 60px;">Action</p></strong>
                </div>
            </div>
            <hr>

            <% if(teacher.length > 0) { %>
                <% let i = 1;  %>
                    <% teacher.forEach(teacher=>{ %>
                        <div class="row mx-3 py-1">
                            <div class="col-1">
                                <p>
                                    <%= i %>
                                </p>
                            </div>

                            <div class="col-3">
                                <p>
                                    <%= teacher.name %>
                                </p>
                            </div>
                            <div class="col-4">
                                <p>
                                    <%= teacher.email %>
                                </p>
                            </div>
                            </a>
                            <div class="col-2">
                                <a class="btn btn-success " href="/admin/student/<%= teacher.id %>">Students</a>
                            </div>
                            <div class="col-2">
                                <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="/admin/delete/<%= teacher.id %>">Delete</a>
                            </div>
                        </div>
                        <hr>
                        <% i++; %>
                            <% })} %>

        </div>

</body>

</html>